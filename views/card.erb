<div class="card">
  <% @prop=[1.1,1.2,1.3,1.4,1.5,1.6].sample %>
  <% @src="http://lorempixel.com/#{(400*@prop).to_i}/#{(200*@prop).to_i}/people/" %>
  <img class="card-img-top photo" src="<%= @post[:photo]%>" alt="<%=@src%>">
  <div class="card-block">
    <h4 class="card-title"><%= @post[:title]%></h4>
    <div class="card-content card-header">
      <p class="card-text"> <%= @post[:content]%> </p>
      <div class="card-rating">
        <div class="rate">

          <%(5-@post[:rating].to_i).times do %>
            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
          <% end %>

            <%@post[:rating].to_i.times do %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <% end %>

        </div>
      </div>
    </div>

    <!-- //Comments -->


    <ul class="list-group list-group-flush comments">
      <%COMMENTS[1].each do |comment|%>
      <div class="">
        <li class="comments list-group-item text-left">
          <%@prop=[1.1,1.2,1.3,1.4,1.5,1.6].sample%>
          <%@src="http://lorempixel.com/#{(400*@prop).to_i}/#{(200*@prop).to_i}/people/"%>
          <img src="<%=@src%>" alt="user" class="avatar">
          <%= comment %>
        </li>
      </div>
      <%end %>
    </ul>
      <a href="https://www.envoituresimone.com/" class="btn btn-primary cta ">Go !</a>
  </div>
</div>
